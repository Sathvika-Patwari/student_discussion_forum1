<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/posttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="STUDENT DISCUSSION FORUM"
        android:textColor="#FFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/posttext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="175sp"
        android:textColor="#FFFF"
        android:textSize="25sp"
        android:text="PROFILE" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200sp"
        android:layout_marginLeft="270sp"
        android:background="#FFFF"
        android:text="EDIT" />

    <Button
        android:id="@+id/button2"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="360sp"
        android:layout_marginTop="200sp"
        android:background="#FFFF"
        android:text="+" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="123dp"
        android:layout_height="42dp"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="20sp"
        android:textColor="#FFFF"
        android:textSize="25sp"
        android:text="NAME" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190sp"
        android:layout_marginLeft="20sp"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:text="ROLL NUMBER" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:layout_marginTop="260sp"
        android:background="#FFFF" />




</RelativeLayout>